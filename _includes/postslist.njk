<ul reversed class="postlist" style="counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }}">
{% for post in postslist | reverse %}
  <li>
  <a class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}" href="{{ post.url | url }}">
    <img src="{{ post.data.img | url }}"/>
    <div class="postlist-item-display">
      {% for tag in post.data.tags %}
        {%- if collections.tagList.indexOf(tag) != -1 -%}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <span class="postlist-tag">{{ tag }}</span>
        {%- endif -%}
      {% endfor %}
      <span class="postlist-title">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</span>
      <time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
      <span class="dot-separator">Â·</span>
      <span>{{ post | readingTime}}</span>
    </div>
  </a>
  </li>
{% endfor %}
</ul>
